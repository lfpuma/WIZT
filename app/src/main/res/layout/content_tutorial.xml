<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View android:layout_width="0dp" android:layout_height="0dp"
          app:layout_constraintStart_toStartOf="parent"
          android:background="@drawable/background_tutorial"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintDimensionRatio="108:200"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
          />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/screen_1" app:layout_constraintDimensionRatio="108:200"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/skipBtn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            style="@style/DefaultButton"
            android:visibility="gone"
            android:text="@string/skip"
            android:textSize="21sp"
            android:fontFamily="@font/futuraptboldoblique"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/startBtn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            style="@style/DefaultButton"
            android:visibility="gone"
            android:text="@string/start"
            android:textSize="21sp"
            android:fontFamily="@font/futuraptboldoblique"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>