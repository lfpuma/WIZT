<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".fragments.NewLabelFragment">

    <include
            android:id="@+id/include"
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            android:fontFamily="@font/futuraptdemi"
            android:textColor="@color/colorWhite"
            android:text="@string/choose_option"
            android:textSize="20sp"
            android:textAlignment="center"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".5"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".3"/>

    <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/fybeBtn"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:background="@color/colorTransparency"-->
            <!--app:layout_constraintDimensionRatio="10:9"-->
            <!--app:layout_constraintTop_toTopOf="@id/guideline1"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintEnd_toEndOf="@id/guideline2"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginLeft="20dp">-->
        <LinearLayout
                android:id="@+id/fybeBtn"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/layout_default"
                app:layout_constraintTop_toTopOf="@id/guideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintDimensionRatio="10:9"
                android:gravity="center">
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fybe"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuraptdemi"
                    android:layout_marginTop="10dp"
                    android:text="@string/fybe"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"/>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

    <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/newLabelBtn"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_constraintDimensionRatio="10:9"-->
            <!--app:layout_constraintTop_toTopOf="@id/guideline1"-->
            <!--app:layout_constraintStart_toStartOf="@id/guideline2"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="20dp">-->
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/newLabelBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="10:9"
                app:layout_constraintTop_toTopOf="@id/guideline1"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_default"
                android:gravity="center">
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_new_label"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuraptdemi"
                    android:text="@string/new_label"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"/>
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

    <RelativeLayout
            android:id="@+id/adsLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/adsLayoutHeight"
            android:layout_marginBottom="@dimen/adsLayoutMargin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adsBannerID">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>